{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rokio",
  "version": "1.1.0-alpha",
  "identifier": "com.nguyennam.rokio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Rokio Account Manager",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false,
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    },
    "linux": {
      "deb": {
        "section": "utils"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "shortDescription": "Roblox Account Manager - Fast, Secure, Cross-Platform",
    "longDescription": "Rokio - The Ultimate Roblox Account Manager\n\nüîê Security: AES-256-GCM encryption for your accounts\n‚ö° Performance: Blazing fast builds with optimized Rust backend\nüåç Cross-Platform: Windows, macOS, Linux support\nüéÆ Features: Multi-instance, Server Browser, Game Favorites\n\nBuilt with Tauri 2.x + SvelteKit + Rust\n\nAuthor: Nam Nguy·ªÖn\nVersion: 1.1.0-alpha",
    "copyright": "¬© 2026 Nam Nguy·ªÖn"

  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": [
          "$DOWNLOAD/**",
          "$DOCUMENT/**",
          "$TEMP/**",
          "$HOME/Library/Application Support/Roblox/**"
        ],
        "deny": []
      }
    }
  }
}
